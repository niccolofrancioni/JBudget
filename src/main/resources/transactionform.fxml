<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.controllers.TransactionFormController">
  <children>
    <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
      <menus>
        <Menu fx:id="menu" mnemonicParsing="false" onAction="#onClickEventMenu" text="Menu">
          <items>
            <MenuItem fx:id="addAccountMenuItem" mnemonicParsing="false" text="Aggiungi account" />
            <MenuItem fx:id="addTransactionMenuItem" mnemonicParsing="false" text="Aggiungi transazione" />
            <MenuItem fx:id="addTagMenuItem" mnemonicParsing="false" text="Aggiungi tag" />
            <MenuItem fx:id="statisticsMenuItem" mnemonicParsing="false" text="Statistiche" />
              <MenuItem fx:id="removeItemsMenuItem" mnemonicParsing="false" text="Rimuovi elementi" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <Label layoutX="25.0" layoutY="20.0" text="Inserimento dei movimenti:" underline="true">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Label layoutX="195.0" layoutY="95.0" text="Tag:" />
            <ListView fx:id="tagList" layoutX="195.0" layoutY="112.0" prefHeight="117.0" prefWidth="251.0" AnchorPane.bottomAnchor="353.0" AnchorPane.leftAnchor="195.0" AnchorPane.rightAnchor="239.0" AnchorPane.topAnchor="112.0" />
            <TextArea fx:id="descriptionArea" layoutX="457.0" layoutY="112.0" prefHeight="93.0" prefWidth="200.0" />
            <Label layoutX="457.0" layoutY="95.0" text="Descrizione:" />
            <Button fx:id="newMovementButton" layoutX="29.0" layoutY="229.0" mnemonicParsing="false" onMouseClicked="#onClickEventNewMovement" text="Nuovo Movimento" visible="false" />
            <Separator layoutX="2.0" layoutY="261.0" prefHeight="11.0" prefWidth="685.0" AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="-2.0" AnchorPane.topAnchor="261.0" />
            <Label fx:id="messageLabel" layoutX="25.0" layoutY="126.0" prefHeight="17.0" prefWidth="143.0" />
            <ListView fx:id="addedMovements" layoutX="141.0" layoutY="306.0" prefHeight="200.0" prefWidth="395.0">
               <contextMenu>
                  <ContextMenu fx:id="contextMenu" onAction="#onRightClick">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Svuota" />
                    </items>
                  </ContextMenu>
               </contextMenu></ListView>
            <Label layoutX="141.0" layoutY="283.0" text="Movimenti inseriti:" />
            <Button fx:id="addTransaction" layoutX="175.0" layoutY="513.0" mnemonicParsing="false" onMouseClicked="#onClickEventAddTransaction" text="Aggiungi transazione">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Label fx:id="confirmAddedTransaction" alignment="CENTER" contentDisplay="CENTER" layoutX="268.0" layoutY="551.0" prefHeight="17.0" prefWidth="150.0" textAlignment="CENTER" />
            <Button fx:id="newTransaction" layoutX="365.0" layoutY="513.0" mnemonicParsing="false" onMouseClicked="#onClickEventNewTransaction" text="Nuova transazione" visible="false">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <GridPane layoutX="27.0" layoutY="96.0" prefHeight="60.0" prefWidth="161.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="23.0" minHeight="10.0" prefHeight="23.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="38.0" minHeight="10.0" prefHeight="27.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Data:" />
                  <DatePicker fx:id="datePicker" promptText="ex: 15/06/2020" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <Button fx:id="addMovementButton" layoutX="31.0" layoutY="193.0" mnemonicParsing="false" onMouseClicked="#onClickEventAddMovement" text="Aggiungi movimento" />
            <GridPane layoutX="30.0" layoutY="37.0" prefHeight="54.0" prefWidth="161.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Seleziona account:">
                     <GridPane.margin>
                        <Insets bottom="-10.0" />
                     </GridPane.margin>
                  </Label>
                  <ChoiceBox fx:id="accountBox" onMouseClicked="#onClickEventBox" prefHeight="18.0" prefWidth="150.0" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <GridPane layoutX="407.0" layoutY="37.0" prefHeight="54.0" prefWidth="161.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Tipo:">
                     <GridPane.margin>
                        <Insets bottom="-10.0" />
                     </GridPane.margin>
                  </Label>
                  <ChoiceBox fx:id="movementTypeBox" prefWidth="150.0" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <GridPane layoutX="218.0" layoutY="37.0" prefHeight="54.0" prefWidth="161.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Importo:">
                     <GridPane.margin>
                        <Insets bottom="-10.0" />
                     </GridPane.margin>
                  </Label>
                  <TextField fx:id="amountField" alignment="CENTER" promptText="ex: 15.50" GridPane.rowIndex="1" />
               </children>
            </GridPane>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
    </AnchorPane>
  </children>
</VBox>
