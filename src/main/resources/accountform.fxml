<VBox prefHeight="461.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.controllers.AccountFormController">
  <children>
    <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
      <menus>
        <Menu fx:id="menu" mnemonicParsing="false" onAction="#onClickEventMenu" text="Menu">
          <items>
            <MenuItem fx:id="addAccountMenuItem" mnemonicParsing="false" text="Aggiungi Account" />
            <MenuItem fx:id="addTransactionMenuItem" mnemonicParsing="false" text="Aggiungi transazione" />
            <MenuItem fx:id="addTagMenuItem" mnemonicParsing="false" text="Aggiungi tag" />
            <MenuItem fx:id="statisticsMenuItem" mnemonicParsing="false" text="Statistiche" />
              <MenuItem fx:id="removeItemsMenuItem" mnemonicParsing="false" text="Rimuovi elementi" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="388.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
         <children>
            <ChoiceBox fx:id="accountType" layoutX="245.0" layoutY="21.0" onMouseClicked="#onClickEventAccountType" prefWidth="150.0" />
            <Label layoutX="148.0" layoutY="25.0" text="Tipo account:">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="balanceField" disable="true" layoutX="246.0" layoutY="53.0" />
            <Label layoutX="153.0" layoutY="57.0" text="Saldo:">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextArea fx:id="descriptionArea" disable="true" layoutX="245.0" layoutY="131.0" prefHeight="59.0" prefWidth="200.0" />
            <Label layoutX="148.0" layoutY="131.0" text="Descrizione:">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="ibanField" disable="true" layoutX="247.0" layoutY="198.0" />
            <Label layoutX="163.0" layoutY="202.0" text="IBAN:">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="bankField" disable="true" layoutX="247.0" layoutY="238.0" />
            <Label layoutX="163.0" layoutY="242.0" text="Banca:">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="limitField" disable="true" layoutX="247.0" layoutY="280.0" />
            <Label layoutX="158.0" layoutY="280.0" text="Limite:">
             <font>
                 <Font name="System Bold" size="12.0" />
             </font>
             </Label>
            <ChoiceBox fx:id="accountRelated" disable="true" layoutX="246.0" layoutY="319.0" prefWidth="150.0" />
            <Label layoutX="124.0" layoutY="323.0" text="Conto collegato:">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Button fx:id="addAccountButton" layoutX="245.0" layoutY="373.0" mnemonicParsing="false" onMouseClicked="#onClickEventAddAccount" text="Aggiungi Account">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="newAccountButton" layoutX="412.0" layoutY="373.0" mnemonicParsing="false" onMouseClicked="#onClickEventNewAccount" text="Nuovo" visible="false">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            <Label fx:id="messageLabel" layoutX="245.0" layoutY="405.0" prefHeight="17.0" prefWidth="167.0" />
            <TextField fx:id="ownerField" disable="true" layoutX="247.0" layoutY="88.0" />
            <Label layoutX="152.0" layoutY="92.0" text="Proprietario:">
             <font>
                 <Font name="System Bold" size="12.0" />
             </font>
             </Label>
         </children>
    </AnchorPane>
  </children>
</VBox>
